    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(function () {

            $("#menu-container a").click(function (e) {
                var url = $(this).attr("data-url");
                var title = $(this).html();
                
                var ifreamObj = "<div title='"+title+"' style='padding:10px;height:95%;'>"+
                    "<iframe  src='"+url+"' "
                    + "style='width:95%;height: 95%;border: 1px solid #b3dfda;'></iframe></div>";
                //console.log(ifreamObj);
                //select	which	Select a tab panel, the 'which' parameter can be the title or index of tab panel.
                //直接看英文的官方文档 
                var isExist = $('.easyui-tabs').tabs('exists', title);
                if (isExist) {
                    $('.easyui-tabs').tabs('select', title);
                    return;
                }

                //添加tab的方法  jquery ui tabs 的方法 
                //添加一个新的标签页面板（tab panel），opt  还需要找对应版本的文档  
                //这些文档 资料 是一个字典一样的 是你在开发 在做的时候 去查询如何做的。 
                //而不是你背下来的 也不是就就看看的
                $('.easyui-tabs').tabs('add', {
                    title: title,
                    content: ifreamObj,
                    closable: true
                });

            });

        })
    </script>
</head>
