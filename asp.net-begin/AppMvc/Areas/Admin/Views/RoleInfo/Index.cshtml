
@{
    ViewBag.Title = "角色管理";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section head
{
    @*//这里渲染头部内容*@
}
<script src="~/Areas/Admin/Scripts/Role.js"></script>

<div>
    <div style="padding:2px 5px;">
        名称: <input id="txtSearchName" class="easyui-textbox" />
        开始时间: <input id="txtBeginTime" name="beginTime" class="easyui-datebox" style="width:110px">
        结束时间: <input id="txtEndTime" name="endTime" class="easyui-datebox" style="width:110px">
        <a href="javascript:void(0);" id="btnSearch" class="easyui-linkbutton" iconCls="icon-search">搜索</a>
    </div>
    <div style="margin:1px 0;"></div>
    <table id="tt" class="easyui-datagrid" title="角色列表" style="width:100%;height:400px;"></table>
</div>

<div id="addDiv" style="display:none;">
    @using (Ajax.BeginForm("AddInfo", "RoleInfo", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterAdd" }, new { id = "addForm" }))
    {
        <div style="width:290px;margin:5px auto;padding:1px 5px">
            <div style="margin-bottom:1px">
                <div>角色名称:</div>
                <input type="text" name="RoleName" class="easyui-textbox" data-options="required:true,validType:'length[1,10]'" style="width:100%;height:32px">
            </div>
            <div style="margin-bottom:1px">
                <div>备注信息:</div>
                <input type="text" name="Remark" class="easyui-textbox" style="width:100%;height:32px" data-options="prompt:'请输入备注信息.',required:true,validType:'length[1,50]'">
            </div>
            <div style="margin-bottom:1px">
                <div>角色类型:</div>
                <select name="RoleType"  class="easyui-combobox" style="width:100%;height:32px">
                    <option value="1">普通角色</option>
                    <option value="2">管理员角色</option>
                </select>
            </div>
        </div>
    }
</div>

<div id="editDiv" style="display:none;">
    @using (Ajax.BeginForm("EditInfo", "RoleInfo", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterEdit" }, new { id = "editForm" }))
    {
        <input type="hidden" id="txtID" name="ID" />
        <div style="width:290px;margin:5px auto;padding:1px 5px">
            <div style="margin-bottom:1px">
                <div>角色名称:</div>
                <input id="txtRoleName" type="text" name="RoleName" class="easyui-textbox" data-options="required:true,validType:'length[1,10]'" style="width:100%;height:32px">
            </div>
           
            <div style="margin-bottom:1px">
                <div>备注信息:</div>
                <input id="txtRemark" type="text" name="Remark" class="easyui-textbox" style="width:100%;height:32px" data-options="prompt:'请输入备注信息.',required:true,validType:'length[1,50]'">
            </div>
            <div style="margin-bottom:1px">
                <div>角色类型:</div>
                <select id="txtRoleType" name="RoleType" class="easyui-combobox" style="width:100%;height:32px">
                    <option value="1">管理员</option>
                    <option value="2">普通</option>
                </select>
            </div>
        </div>
    }
</div>

<!------------添加表单------------------>
<div id="setActionDiv">
    @*就当做一个窗体来理解 一个子窗体 一个父亲窗体*@
    <iframe id="setActionFrame" style="width: 100%;height: 98%" frameborder="0"></iframe>
</div>

@section footer {
    @Scripts.Render("~/bundles/jqueryval")
}
