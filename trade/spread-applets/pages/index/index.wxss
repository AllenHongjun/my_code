/* 列表 */
.card{
	width:690rpx;
	/* height: 250rpx; */
	background: #ffffff;
	padding: 30rpx 30rpx 25rpx;
	display: flex;
	align-items: center;
	justify-content:center;
	flex-wrap: wrap;
	align-content:flex-start;
	margin-bottom: 20rpx;
}
.card-top{
	width:690rpx;
	height: 200rpx;
	display: flex;
	align-items: center;
	justify-content:space-between;
	/* background: #000; */
}
.card-pic{
	width: 215rpx;
	height: 200rpx;
	background: #fff;
}
.card-pic image{
	width: 100%;
	height: 100%;
}
.card-right{
	width:450rpx;
	height: 200rpx;
	display: flex;
	align-items: flex-start;
	justify-content:flex-start;
	flex-wrap: wrap;
	align-content:space-between;
	/* background: #000; */
}
.card-title{
	width:450rpx;
	/* height: 150rpx; */
	/* background: #f00; */
}
.card-desc{
	width:450rpx;
	height: 150rpx;
	display: flex;
	/* align-items: flex-start; */
	/* justify-content:space-around; */
	flex-wrap: wrap;
	align-content:space-between;
	font-size: 26rpx;
	color: #bbb;
	/* background: #f0f; */
}
.card-desc view{
	width: 100%;
}
.card-desc view>text{
	color: #858585;
	margin-left: 5px;
}
.card-bottom{
	width:690rpx;
	margin-top: 35rpx;
	display: flex;
	align-items: center;
	justify-content:space-between;
	/* background: #06BF04; */
	/* height: 50rpx; */
}
.card-price{
	color: #cd4331;
}
.card-price>text{
	font-size: 26rpx;
	color: #7d7d7d;
}
.card-bottom .buttonTg{
	background: #ff8020;
	width: 150rpx;
	height: 52rpx;
	line-height: 52rpx;
	padding: 0;
}


/* 联系客服按钮 */
.card-bottom .btn-contact{
	background: #ff8020;
	width: 150rpx;
	height: 52rpx;
	line-height: 52rpx;
	padding: 0;
	margin: 0;
	font-size: 26rpx;
	color: #fff;
	border-radius:2px;
	

}

