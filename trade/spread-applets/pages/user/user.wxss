.container{
	display: flex;
	align-items: center;
	justify-content:center;
	flex-wrap: wrap;
	align-content:flex-start;
	background: #f5f5f5;
	/* min-height: 1000rpx; */
}
.userinfo {
	display: flex;
	flex-direction: column;
	/* justify-content:center; */
	align-items: center;
	height: 365rpx;
}

.userinfo-avatar {
	width: 113rpx;
	height: 113rpx;
	margin-top: 70rpx;
	border-radius: 50%;
	overflow: hidden;
	border: 3px solid #fff;
}

.userinfo-nickname {
	color: #fff;
	font-size: 30rpx;
	margin-top: 20rpx;
}
.userContent{
	position: absolute;
	z-index: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.userBg{
	width: 100%;
	height: 100%;
}

/* 钱包 */
.wallet{
	display: flex;
	align-items: center;
	justify-content:center;
	margin-top: 50rpx;
	/* flex-wrap: wrap; */
	/* align-content:flex-start; */
}
.income{
	width: 50%;
	color: #ff8020;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content:center;
	flex-wrap: wrap;
	align-content:flex-start;
}
.income text{
	width: 100%;
	font-size: 36rpx;
	margin: 7rpx 0;
}
.income text.title{
	font-size: 28rpx;
}

/* 收益明细 */
.list{
	margin: 45rpx auto 0;
}
.list text{
	color: #666;
	font-size: 28rpx;
	font-weight: bold;
	padding-left: 20px;
}
.list-content{
	margin-top: 30rpx;
	width: 100%;
}
.list-right{
	color: #999;
	font-size: 24rpx;
	padding: 5rpx 0;
}
.list-left{
	color: #cd4331;
	font-size: 30rpx;
	padding: 5rpx 0 5rpx 5rpx;
}