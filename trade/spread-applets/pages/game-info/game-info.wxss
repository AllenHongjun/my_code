/* pages/game-info/game-info.wxss */
.game-info {
    width: 100%;
    height: 3000rpx;
    text-align: center;
    font-size: 20px;
    color: #333;
    background-color: #ccc;
}

.btn-box {
    width: 100%;
    height: 200rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: rgba(255,255,255,.7);
    padding: 30rpx 0rpx 0rpx;
    letter-spacing:5rpx;

}

.btn-box button{
    background-color: #ff8020;
    color: #fff;
    font-size: 14px;
    width: 80%;
    box-shadow: 0 0 10px #ccc;
}

.btn-box .btn-share-img{
    background-color: #fff;
    color: #ff8020;
    margin-top: 30rpx;
}


/* 是因为画布实际没有宽度和高度所以画不上去 */
.canvas-box{
	width: 100%;
	position: fixed;
	left: 0;
	top: 999999rpx;
  }